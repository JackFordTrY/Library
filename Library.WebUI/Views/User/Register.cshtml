@model RegisterRequest

@{
    Layout = "_UserLayout";
}

<h3 class="mb-5">Sign In</h3>

@if (Model is not null)
{
    <h5 class="mb-5">This user already exists</h5>
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-text mb-4">
         <input 
             type="text" 
             id="typeEmailX-2" 
             class="form-control form-control-lg"
             asp-for="Login"
             placeholder="Username" />
         <span asp-validation-for="Login" style="position:absolute; transform:translateX(-50%);"></span>
    </div>
    
    <div class="form-text mb-4">
         <input 
             type="email" 
             id="typeEmailX-2" 
             class="form-control form-control-lg"
             asp-for="Email"
             placeholder="Email"/>
         <span asp-validation-for="Email" style="position:absolute; transform:translateX(-50%);"></span>
    </div>
    <div class="form-text mb-4">
         <input 
             type="password"
             class="form-control form-control-lg"
             id="typeEmailX-2"
             asp-for="Password"
             placeholder="Password" />
         <span asp-validation-for="Password" style="position:absolute; transform:translateX(-50%);"></span>
    </div>
    <div>
        <button class="btn btn-primary btn-lg btn-block" type="submit">Sign In</button>
    </div>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>