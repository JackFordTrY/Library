@model SearchBookResponse

@if(Model.Books is null || Model.Books.Count() < 1)
{
    <div class="search-item">
        <p style="margin-bottom: 0;">Nothing was found!</p>
    </div>
}
else
{
    @foreach(var book in Model.Books){
        <div class="search-item">
            <a href="/@book.Title.ToLower()" class="search-item-title">@book.Title</a>
            <a class="search-item-author" href="#">/ @book.AuthorName</a> <hr>
        </div>
    }
}