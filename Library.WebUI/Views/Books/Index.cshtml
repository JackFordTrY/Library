
@{
    ViewBag.Title = "Main page";
    Layout = "_Layout";
}

<div class="d-flex container-md justify-content-center" >
    <div class="grid-wrap">
        
    </div>
    <form autocomplete="off">
    <div class="filter-wrap">
        <div class="filter-container">
            <div class="filter-group">
                <div class="filter-group__title">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sorting options</a>
                        <div class="dropdown-menu">
                            <div class="dropdown-item">
                                <input type="radio" id="order1" name="order" value="Title" />
                                <label for="order1">Title</label>
                            </div>
    
                            <div class="dropdown-item">
                                <input type="radio" id="order2" name="order" value="Date" />
                                <label for="order2">Year</label>
                            </div>
    
                            <div class="dropdown-divider"></div>
                            <div class="dropdown-item">
                                <input type="radio" id="dir1" name="direction" value="Ascending" />
                                <label for="dir1">Ascending</label>
                            </div>
    
                            <div class="dropdown-item">
                                <input type="radio" id="dir2" name="direction" value="Descending" />
                                <label for="dir2">Descending</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="filter-group">
                <div class="filter-group__title">
                    Publish year
                </div>
                <div class="filter-group__input">
                    <input class="is-invalid" type="text" name="yearFrom" placeholder="from" />
                    <span> - </span>
                    <input type="text" name="yearTo" placeholder="to" />
                </div>
            </div>
            <div class="filter-group">
                <div class="genre-container">
                    <label class="control control-checkbox">
                        Adventure
                        <input type="checkbox" name="genre" value="0" />
                        <div class="control_indicator"></div>
                    </label>
                    <label class="control control-checkbox">
                        Autobiography
                        <input type="checkbox" name="genre" value="1" />
                        <div class="control_indicator"></div>
                    </label>
                    <label class="control control-checkbox">
                        Bildungsroman
                        <input type="checkbox" name="genre" value="2" />
                        <div class="control_indicator"></div>
                    </label>
                    <label class="control control-checkbox">
                        Comedy
